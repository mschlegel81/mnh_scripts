flatInitial(particleCount>1)->
begin
  local p:=[[1..particleCount],random(particleCount)*0.01].transpose;
  local c:=p.agg(+)/p.size;
  p:=p.map({$s-c});
  local n:=p.map({$x/euklideanNorm($x)});
//  p*=regulaFalsi({dynamicMovement([p*$a,zeroVectors(p.size)],0)[1].each(a,(a*n[index]).agg(+),+)},0.1,1,1E-3,1E-3);
  local dx:=1-p.getInner(1).min;
  [p.map({$x+[0,dx]}),zeroVectors(p.size)];
end;

main(sysSize)->begin
  local syss:=sysSize.toInt;

  print('Initializing system with ',sysSize,' entries');

  resetOptions;
  local sys:=initialDroplets(syss);
//  local sys:=flatInitial(syss);

  local counter:=0;
  clearAnimation;
  setOptions(
   ['autoscaleFactor'=>1,
    'autoscaleX'=>false,
    'autoscaleY'=>false,
    'axisStyleX'=>3,
    'axisStyleY'=>3,
    'x0'=>-1,
    'x1'=> 1,
    'y0'=> 0.0,
    'y1'=> 2.0,
    'logscaleX'=>false,
    'logscaleY'=>false,
    'preserveAspect'=>true]);


  plotSystem(sys[0]);
  while(counter<500,begin
    local t0:=time;
    sys:=stepForward(sys,-1);
    printf('%3d %7.3fs',counter+=1,time-t0);
    plotSystem(sys[0]);
  end);
end;


