particleInteractionStrength:=1;
TIME_STEP_SIZE:=0.01/sqrt(particleInteractionStrength);

absForce(x)->1-x^-3*max(0,0.2-x);

//absForce(x)->x>1 ? 1/x : -cos(x*pi);
//absForce(x)->-cos(x*pi*5)/x;


force(ab:List)->begin
  local n:=ab[1]-ab[0];
  local d:=euklideanNorm(n);
  n*(particleInteractionStrength/d*absForce(d));
//  particleInteractionStrength*n*(d-1)/d^3;
end;

bottomForce(p:NumericList(2))->[0,-absForce(p[1])];
