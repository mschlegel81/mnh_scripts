getCpuLoad->begin
  local execResult:=exec('wmic',['cpu','get','loadpercentage']);
  execResult[1]==0
  ? execResult[0].map({$x.trim.softCast}).filter(::isInt).head
  : void;
end;

begin
  local samples:=[[time,getCpuLoad]];
  while(true,begin
    plot(samples);
    postDisplay;
    samples|=[[time,getCpuLoad]];
  end);
end;
